                android:layout_height="wrap_content"
                android:text="Hide"/>

        </RadioGroup>

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"/>



    </LinearLayout>

</FrameLayout>
